<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css" rel="stylesheet" />
    <script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>
    <script src="https://unpkg.com/gridjs/l10n/dist/l10n.umd.js"></script>
    <script src="/js/dataTables.js" defer></script>
    <%- include('partials/head.ejs') %> 
    <title><%= title%></title>
</head>
<body>
    <%- include('partials/navBar.ejs') %>
    <main class="main">
        <h1 class="main__title">Verificación de estado de referido</h1>
        <!-- <div id="table" class="tabla-estados"></div> -->
        <table class="table-estado">
            <thead>
                <th>ID</th>
                <th>FECHA REGISTRO</th>
                <th>NOMBRE REFERIDO</th>
                <th>TELEFONOS REFERIDO</th>
                <th>CAMPAÑA INTERES</th>
                <th>SEDE</th>
                <th>ESTADO</th>
            </thead>
            <tbody>
                <% resultado.forEach((datos) => { %>
                    <tr>
                        <td><%= datos.id %></td>
                        <td><%= datos.fecha %></td>
                        <td><%= datos.nombre_r %></td>
                        <td><%= datos.telefono_r %></td>
                        <td><%= datos.campana_r %></td>
                        <td><%= datos.sede_r %></td>
                        <td><%= datos.estado %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
</body>
</html>