<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css" rel="stylesheet" />
    <script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>
    <script src="https://unpkg.com/gridjs/l10n/dist/l10n.umd.js"></script>
    <script src="/js/dataTables.js" defer></script>
    <%- include('partials/head.ejs') %> 
    <title><%= title%></title>
</head>
<body>
    <%- include('partials/navBar.ejs') %>
    <main class="main">
        <h1 class="main__title">Verificaci√≥n de estado de referido</h1>
        <!-- <div id="table" class="tabla-estados"></div> -->
        <table class="table-estado">
            <thead>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>DOCUMENTO</th>
                <th>TELEFONO</th>
                <th>ANTIGUEDAD</th>
            </thead>
            <tbody>
                <% resultado.forEach((datos) => { %>
                    <tr>
                        <td><%= datos.id %></td>
                        <td><%= datos.name %></td>
                        <td><%= datos.documento %></td>
                        <td><%= datos.Telefono %></td>
                        <td><%= datos.Antiguedad %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
</body>
</html>